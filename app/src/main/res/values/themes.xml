<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
      Primary App Theme for Coffeshop2.
      - Parent is 'NoActionBar' to remove the default top bar.
      - Colors are customized for a coffee shop aesthetic.
    -->
    <style name="Theme.Coffeshop2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color, used for buttons, etc. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/dark_brown</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color (the very top bar with time/battery). -->
        <item name="android:statusBarColor">@color/light_cream</item>
        <!-- Makes status bar icons (time, battery) dark for better visibility on a light background. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--
      Shape Appearance Style for creating rounded corners on ImageViews.
      You can apply this to a ShapeableImageView using app:shapeAppearanceOverlay.
    -->
    <style name="CircleCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>

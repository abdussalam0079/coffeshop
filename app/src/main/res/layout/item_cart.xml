<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cartItemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/full_white_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/cartItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/cart_item_placeholder_title"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/cartItemImage"
            app:layout_constraintStart_toEndOf="@+id/cartItemImage"
            app:layout_constraintEnd_toStartOf="@+id/cartRemoveButton" />

        <TextView
            android:id="@+id/cartItemOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/cart_item_placeholder_price"
            android:textColor="@color/brown"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/cartItemTitle"
            app:layout_constraintStart_toStartOf="@+id/cartItemTitle" />

        <TextView
            android:id="@+id/cartItemCurrentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/cart_item_placeholder_price"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/cartItemOriginalPrice"
            app:layout_constraintBottom_toBottomOf="@+id/cartItemOriginalPrice"
            app:layout_constraintStart_toEndOf="@+id/cartItemOriginalPrice" />

        <LinearLayout
            android:id="@+id/quantityContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/unselected_pill"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cartItemOriginalPrice"
            app:layout_constraintStart_toStartOf="@+id/cartItemTitle">

            <TextView
                android:id="@+id/cartQuantityMinus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="@string/cart_quantity_minus"
                android:textColor="@color/dark_brown"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cart_desc_decrease" />

            <TextView
                android:id="@+id/cartQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="@string/cart_quantity_default"
                android:textColor="@color/dark_brown"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="20dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/cartQuantityPlus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="@string/cart_quantity_plus"
                android:textColor="@color/dark_brown"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cart_desc_increase" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cartRemoveButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/bg_add_button"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/cart_desc_remove"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

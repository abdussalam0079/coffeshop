<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="220dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <ImageView
            android:id="@+id/popularImage"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/popularTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cappuccino"
            android:textColor="@color/dark_brown"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/popularImage"
            app:layout_constraintTop_toBottomOf="@+id/popularImage" />

        <TextView
            android:id="@+id/popularExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Espresso, Milk Foam, Cocoa Powder"
            android:textColor="@color/brown"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/popularTitle"
            app:layout_constraintTop_toBottomOf="@+id/popularTitle" />

        <TextView
            android:id="@+id/popularPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="$4.5"
            android:textColor="@color/dark_brown"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/popularTitle"
            app:layout_constraintTop_toBottomOf="@+id/popularExtra" />

        <RatingBar
            android:id="@+id/popularRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/popularPrice"
            app:layout_constraintEnd_toStartOf="@+id/popularWishlistButton" />

        <ImageView
            android:id="@+id/popularWishlistButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart"
            android:background="@drawable/bg_add_button"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Add to wishlist"
            app:tint="@color/orange"
            app:layout_constraintBottom_toBottomOf="@+id/popularPrice"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

